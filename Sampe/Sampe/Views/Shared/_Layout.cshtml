                                    <li id="dropdown">
                                        <a class="LinkMenu" data-toggle="collapse" href="#OS">
                                            Ordem de Serviço
                                        </a>
                                        <!-- Dropdown level 1 -->
                                        <div id="OS" class="panel-collapse collapse">
                                            <div class="panel-body">
                                                <ul class="nav">
                                                    <li><a class="LinkMenu" href="/FormularioOSAtividades/Create/">Novo Formulário</a></li>
                                                    <li><a class="LinkMenu" href="/FormularioOrdemServicoes/Index/">Formulários</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </li>
