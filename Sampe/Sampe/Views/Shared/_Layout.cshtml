                        <a class="LinkMenu" data-toggle="collapse" href="#dropdown_b">
                            <span class="glyphicon glyphicon-dashboard"></span> Produção
                        </a>
                        <!-- Dropdown level 1 -->
                        <div id="dropdown_b" class="panel-collapse collapse">
                            <div class="panel-body">
                                <ul class="nav">
                                    <li><a class="LinkMenu" href="/OrdemProducaoKits/Create">Ordens de Produção Kit</a></li>
                                    <li><a class="LinkMenu" href="/OrdemProducaoPecas/Create">Ordens de Produção Peça</a></li>
