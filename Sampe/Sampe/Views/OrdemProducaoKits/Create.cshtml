}

<script>
    $(document).ready(function () {
		$("#add").click(function () {			
			$("#esp").append('<tr ><td> @Html.EditorFor(model => model.Especificacao.TipoKit, new { htmlAttributes = new { @class = "form-control" } })</td><td>@Html.EditorFor(model => model.Especificacao.CorKit, new { htmlAttributes = new { @class = "form-control" } }) </td><td> @Html.EditorFor(model => model.Especificacao.Parafuso) </td><td>@Html.EditorFor(model => model.Especificacao.QuantProduzido, new { htmlAttributes = new { @class = "form-control" } })</td><td> <select class="form-control" id="ClienteId" name="ClienteId">@foreach(var x in clientes){<option value="@x.ClienteId">@x.NomeCliente</option>}</select>  </td><td> </td></tr>');
		});

        $("#esp").on('dblclick ','a', function () {
            $(this).remove();
        });

        $("#adc").click(function () {
            $("#pausa").append('<tr><td> @Html.EditorFor(model => model.ParadaKit.HoraParada, new { htmlAttributes = new { type = "time", @class = "form-control" } }) </td><td> @Html.EditorFor(model => model.ParadaKit.HoraRetorno, new { htmlAttributes = new { type = "time", @class = "form-control" } }) </td><td> @Html.EditorFor(model => model.ParadaKit.Motivo, new { htmlAttributes = new { @class = "form-control" } }) </td><td> @Html.EditorFor(model => model.ParadaKit.Observacoes, new { htmlAttributes = new { @class = "form-control" } }) </td><td></td></tr>');
        });

        $("#pausa").on('dblclick ', 'tr', function () {
            $(this).remove();
        });
    });
</script>
